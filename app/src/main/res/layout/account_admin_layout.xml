<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_admin_account_hinhanh"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_admin_taikhoan_tentk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_admin_account_hinhanh"
            android:text="Name: "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_admin_taikhoan_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_admin_taikhoan_tentk"
            android:layout_marginTop="43dp"
            android:text="@string/password"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_admin_taikhoan_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_admin_taikhoan_password"
            android:layout_marginTop="56dp"
            android:text="@string/phone"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>