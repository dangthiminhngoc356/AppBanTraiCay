<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".Login"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/login_app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/shopicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_app_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/design_default_color_primary_dark"
        android:textColorHint="@color/design_default_color_secondary_variant"
        android:textSize="17dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_phone"
        android:background="@drawable/inputs_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/design_default_color_primary_dark"
        android:textColorHint="@color/design_default_color_secondary_variant"
        android:textSize="17dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/Layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/et_password_login"
        android:layout_marginTop="5dp"

        />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox_rememberme"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/et_password_login"
        android:layout_marginLeft="15dp"
        android:text="Remember me"
        android:textColor="@color/design_default_color_primary_dark"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_fogetpassword"

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/et_password_login"
        android:layout_marginLeft="270dp"
        android:text="Forget password"
        android:textColor="@color/design_default_color_primary"
        android:textSize="17dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_login_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fogetpassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_admin"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/btn_login_main"
        android:layout_marginLeft="335dp"
        android:text="Admin"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20dp"
        android:textStyle="bold"
        />


</RelativeLayout>