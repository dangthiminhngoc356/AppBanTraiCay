<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundqltk"
        >

        <TextView
            android:id="@+id/txt_admin_donhang_tensp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm : "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_admin_donhang_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_admin_donhang_tensp"
            android:text="Số lượng : "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_admin_donhang_dongia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_admin_donhang_soluong"
            android:text="Đơn giá : "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_admin_donhang_tennguoimua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_admin_donhang_dongia"
            android:text="Tên người mua: "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_admin_donhang_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_admin_donhang_tennguoimua"
            android:text="Số điện thoại: "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_admin_donhang_diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_admin_donhang_sdt"
            android:text="Địa chỉ: "
            android:textColor="#000000"
            android:textSize="20dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>